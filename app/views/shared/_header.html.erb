<!-- ======= Header ======= -->
<header id="header" class="header d-flex align-items-center fixed-top">
  <div class="container-fluid d-flex align-items-center justify-content-between">
    <%= link_to homepage_index_path, class: 'logo d-flex align-items-center  me-auto me-lg-0' do %>
      <!-- Uncomment the line below if you also wish to use an image logo -->
      <%#= image_tag 'logo.png', alt: '' %>
      <i class="bi bi-camera"></i>
      <h1>PhotoFolio</h1>
    <% end %>

    <nav id="navbar" class="navbar">
      <ul>
        <li><%= link_to 'Home', homepage_index_path, class: 'active' %></li>
        <li><%= link_to 'About', homepage_index_path %></li>
        <li class="dropdown">
          <%= link_to '#', class: 'nav-link dropdown-toggle', id: 'navbarDropdown', role: 'button', 'data-bs-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false' do %>
            <span>Gallery</span> <i class="bi dropdown-indicator"></i>
          <% end %>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li><%= link_to 'Nature', homepage_index_path %></li>
            <li><%= link_to 'People', homepage_index_path %></li>
            <li><%= link_to 'Architecture', homepage_index_path %></li>
            <li><%= link_to 'Animals', homepage_index_path %></li>
            <li><%= link_to 'Sports', homepage_index_path %></li>
            <li><%= link_to 'Travel', homepage_index_path %></li>
            <li class="dropdown">
              <%= link_to '#', class: 'nav-link dropdown-toggle', id: 'subMenuDropdown', role: 'button', 'data-bs-toggle': 'dropdown', 'aria-haspopup': 'true', 'aria-expanded': 'false' do %>
                <span>Sub Menu</span> <i class="bi bi-chevron-down dropdown-indicator"></i>
              <% end %>
              <ul class="dropdown-menu" aria-labelledby="subMenuDropdown">
                <li><%= link_to 'Sub Menu 1', '#' %></li>
                <li><%= link_to 'Sub Menu 2', '#' %></li>
                <li><%= link_to 'Sub Menu 3', '#' %></li>
              </ul>
            </li>
          </ul>
        </li>
        <li><%= link_to 'Services', homepage_index_path %></li>
        <li><%= link_to "Log out", destroy_user_session_path,  'data-turbo-method': :delete %></li>
      </ul>
    </nav>

    <div class="header-social-links">
      <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
      <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
      <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
      <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
    </div>
  </div>
</header>